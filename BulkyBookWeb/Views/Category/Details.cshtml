@model Category
@{
    ViewData["Title"] = $"Category {Model.Id} - {Model.Name}";
}

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Category @Model.Id - @Model.Name</h2>
        <hr />
    </div>
    <ul class="nav nav-pills">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#id">Id</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#name">Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#displayOrder">Display Order</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#createdDateTime">Created Date Time</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#name">Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#name">Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#name">Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#name">Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#name">Name</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#name">Name</a>
        </li>
    </ul>
    <div id="myTabContent" class="tab-content p-2 mt-3 mb-4 border-top">
        <div class="tab-pane fade active show" id="id">
            <p>Category ID: @Model.Id</p>
        </div>
        <div class="tab-pane fade" id="name">
            <p>Category Name: @Model.Name</p>
        </div>
        <div class="tab-pane fade" id="displayOrder">
            <p>Category Display Order: @Model.DisplayOrder</p>
        </div>
        <div class="tab-pane fade" id="createdDateTime">
            <p>Created date: @Model.CreatedDateTime</p>
        </div>
    </div>
    <a asp-controller="Category" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Edit
    </a>
    <a asp-controller="Category" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="bi bi-trash3-fill"></i> Delete
    </a>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">
        Back to List
    </a>
</div>