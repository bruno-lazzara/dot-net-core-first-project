@if (TempData["success"] != null)
{
    <div class="toast bg-success text-white position-absolute p-0 m-3 top-1 end-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5100" id="myToast">
        <div class="toast-body">
            <div class="row">
                <div class="col-10">
                    <p class="text-white">@TempData["success"]</p>
                </div>
                <div class="col-2">
                    <button type="button" class="btn-close btn-close-white end-0" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
        <div class="progress bg-success m-0 rounded-0" style="height: 5px">
            <div class="progress-bar bg-light" role="progressbar" style="width: 100%; height: 5px" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" id="progressBar"></div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $('#myToast').toast({ delay: 5100 });
            $('#myToast').toast('show');
        });

        var isPaused = false;
        var current_progress = 100;
        $(function () {
            var interval = setInterval(function () {
                if (!isPaused) {
                    current_progress -= 1;
                    $("#progressBar")
                        .css("width", current_progress + "%")
                        .attr("aria-valuenow", current_progress)
                    if (current_progress <= 0) {
                        clearInterval(interval);
                    }
                }
            }, 50);
        });

        $('#myToast').on('mouseenter', function () {
            current_progress = 100;
            $("#progressBar")
                .css("width", current_progress + "%")
                .attr("aria-valuenow", current_progress);
            isPaused = true;
        });
        $('#myToast').on('mouseleave', function () {
            isPaused = false;
        });

    </script>
}

